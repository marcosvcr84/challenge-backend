// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id     String  @id @default(uuid())
  accountId   String
  categoryId   String
  reference   String 
  amount      String
  currency String
  date DateTime
}

model Account {
  id     String  @id @default(uuid())
  name String
}

model Category {
  id     String  @id @default(uuid())
  name   String 
  color  String
}
